modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Movie Chat"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Advanced Movie Chat"

[[workflows.workflow]]
name = "Movie Chat"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python movie_chat_fixed.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Advanced Movie Chat"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python advanced_movie_chat.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
